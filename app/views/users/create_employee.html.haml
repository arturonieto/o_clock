.users_create_employee
 .container
  .form
   =link_to manage_workers_path, remote: false do
    %span.fas.fa-arrow-alt-circle-left
   %h2 Registrar nuevo usuario
   =form_for setup_user(@user), :method => :post do |f|
    =f.email_field :email, placeholder: "Email"
    %br
    =f.password_field :password, placeholder: "ContraseÃ±a"
    %br
    = f.fields_for :employee do |e|
     = e.text_field :first_name, placeholder: "Nombre(s)"
     %br
     = e.text_field :last_name, placeholder: "Apellidos"
     %br
     = e.hidden_field :admin_id, :value => current_user.admin.id
     .row.entrada
      .col-md-6.col-xs-6.text
       %span Hora de entrada
      .col-md-6.col-xs-6.input
       = e.time_field :entry_time

    %br
    = f.hidden_field :role, :value => 1
    = f.submit "Crear"
